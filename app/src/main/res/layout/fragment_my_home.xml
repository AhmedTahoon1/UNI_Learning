<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background4">







    <TextView
        android:id="@+id/user2_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50sp"
        android:layout_marginStart="20sp"
        android:text="Favorites"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="26sp"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardh1"
        android:layout_width="0dp"
        android:layout_height="120sp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="100sp"
        android:layout_marginStart="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardh3"
        app:layout_constraintTop_toBottomOf="@id/user2_txt"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Courses_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            >

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="20sp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Courses"
                android:textColor="@color/white"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardh2"
        android:layout_width="0dp"
        android:layout_height="120sp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20sp"
        app:layout_constraintStart_toStartOf="@id/cardh1"
        app:layout_constraintEnd_toEndOf="@id/cardh1"
        app:layout_constraintTop_toBottomOf="@id/cardh1"
        android:backgroundTint="#915fdc"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/art_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="20sp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Articles"
                android:textColor="@color/white"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardh3"
        android:layout_width="0dp"
        android:layout_height="120sp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        app:layout_constraintStart_toEndOf="@id/cardh1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cardh1"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/books_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="20sp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Books"
                android:textColor="@color/white"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>







</androidx.constraintlayout.widget.ConstraintLayout>